extends layout
block content
    .contenido-principal
        h1 #{title}
        if err
            each error in err
                .alerta= error.text
        form.agregar-proyecto(action="/newProject" method="POST")
            .campo
                label(for="name") Project Name: 
                input(type="text" id="name" name="name" placeholder="Project Name")
            .campo.enviar
                input(type="submit" value="Add" class="boton")