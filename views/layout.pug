doctype html
html(lang="en")
    head
        include partials/header.pug
    body
        header.barra
            h1 UpTask
            a(href="#") End Session
        main.contenedor
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/newProject" class="boton") New
                        span +
                .panel.lista-proyectos
                    h2 Projects
                    ul#proyectos.proyectos
                        if(projects.length)
                            each project in projects
                                li
                                    a(href=`/projects/${project.url}`)= project.name
            block content
        script(src="/dist/bundle.js")